<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_centerVertical="true"
        android:id="@+id/back_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/back_btn" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:textSize="22sp"
        android:textColor="#676767"
        android:id="@+id/btn_text" />

    <TextView
        android:id="@+id/ble_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Device"
        android:textSize="9dp"
        android:textColor="#676767"
        android:layout_alignBaseline="@+id/ble_btn"
        android:layout_alignBottom="@+id/ble_btn"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/ble_btn"
        android:layout_width="30dp"
        android:layout_marginRight="5dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_bluetooth_connect_24dp"
        android:layout_alignTop="@+id/back_btn"
        android:layout_toStartOf="@+id/ble_dev" />

</RelativeLayout>