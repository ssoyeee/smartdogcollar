<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <TextView
        android:paddingTop="15dp"
        android:paddingLeft="16dp"
        android:id="@+id/dialog_title"
        android:text="목표 걸음 수"
        android:textColor="@color/colorLine"
        android:textSize="12pt"
        android:background="@null"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/line1"
        android:layout_below="@+id/dialog_title"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine"
        android:layout_width="fill_parent"
        android:layout_height="6px" />

    <View
        android:id="@+id/line2"
        android:layout_below="@+id/target_picker_container"
        android:layout_marginTop="10dp"
        android:background="#a3a3a3"
        android:layout_width="fill_parent"
        android:layout_height="2px" />

    <Button
        android:layout_below="@+id/line2"
        android:text="Save"
        android:background="@null"
        android:id="@+id/target_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:paddingTop="5dp"
        android:gravity="center"
        android:background="@null"
        android:id="@+id/target_picker_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line1"
        android:layout_alignParentStart="true">

        <NumberPicker

            android:layout_centerHorizontal="true"
            android:background="@null"
            android:id="@+id/target_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></NumberPicker>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:textSize="8pt"
            android:text="걸음"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
